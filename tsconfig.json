{
    "compilerOptions": {
        "lib": ["ESNext"],
        "target": "ESNext",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "ESNext",
        "rootDir": ".",
        "moduleResolution": "NodeNext",
        "types": ["bun-types", "jest"],
        "resolveJsonModule": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": true
    },
    "include": ["./src/**/*.ts", "./test/**/*.ts"]
}
